{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/es/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    ".*\\.d\\.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage"
}

{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "/node_modules/"
  ]
}

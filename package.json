{
  "name": "opelete",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "npm run test:lint && npm run test:jest",
    "test:lint": "eslint -c .eslintrc.yml --ext=js src/",
    "test:jest": "cross-env NODE_ENV=test jest --coverage --config jest.config.json",
    "build:prod": "webpack --mode=production --no-progress --hide-modules",
    "build:dev": "webpack --mode=development --no-progress --hide-modules",
    "start": "npm run build:dev && web-ext run -s dist/",
    "postinstall": "npm rebuild node-sass"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fuse.js": "^3.2.0",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "web-ext": "^2.4.0"
  }
}
